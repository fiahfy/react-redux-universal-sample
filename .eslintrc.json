{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "babel",
    "react"
  ],
  "parser": "babel-eslint",
  "rules": {
    "no-unexpected-multiline": 2,

    "array-bracket-spacing": 2,
    "block-spacing": 2,
    "brace-style": 2,
    "comma-spacing": 2,
    "comma-style": 2,
    "computed-property-spacing": 2,
    "consistent-this": 2,
    "eol-last": 2,
    "indent": [2, 2],
    "jsx-quotes": 2,
    "key-spacing": [2, {"mode": "minimum"}],
    "linebreak-style": 2,
    "no-array-constructor": 2,
    "no-multiple-empty-lines": 2,
    "no-negated-condition": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    "object-curly-spacing": 2,
    "quotes": [2, "single"],
    "semi-spacing": 2,
    "semi": [2, "never"],
    "space-before-blocks": 2,
    "space-in-parens": 2,
    "space-unary-ops": 2,
    "spaced-comment": 2,

    "arrow-body-style": 0,
    "arrow-parens": 0,
    "arrow-spacing": 2,
    "constructor-super": 2,
    "generator-star-spacing": 0,
    "no-arrow-condition": 0,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,
    "no-var": 2,
    "object-shorthand": 0,
    "prefer-arrow-callback": 2,
    "prefer-const": 0,
    "prefer-reflect": 0,
    "prefer-spread": 0,
    "prefer-template": 0,
    "require-yield": 0,

    "babel/generator-star-spacing": 1,
    "babel/object-shorthand": 0,

    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1
  },
  "extends": "eslint:recommended"
}
